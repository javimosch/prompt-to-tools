<div class="mb-4">
    <label for="prettyPrompt" class="block text-gray-700 text-sm font-bold mb-2">Enter your prompt:</label>
    <input type="text" id="prettyPrompt" v-model="mainPrompt" @keydown.ctrl.enter="executePrompt" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="e.g., How to fetch drivers">
</div>
<button @click="executePrompt" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" :disabled="loading">
    <span v-if="loading">Loading...</span>
    <span v-else>Execute (Ctrl+Enter)</span>
</button>

<div v-if="output" class="mt-8 p-4 border rounded bg-green-50">
    <h2 class="text-lg font-bold mb-2">Output:</h2>
    <div v-html="output"></div>
</div>
<p v-if="error" class="text-red-500 mt-4">{{ error }}</p>
